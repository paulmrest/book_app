<%- include('../partials/header') %>

<h1>Welcome to the End of Libraries</h1>

<section class="container">
  <h2>Number of Saved Books: <%= books.length %></h2>
  <%  books.forEach(book => { %>
  <article>
  <img src=" <%= book.image_url %> " alt=" <%= book.title %> " title=" <%= book.title %> ">
  <h3> <%= book.title %> </h3>
  <h4><em> <%= book.author %> </em></h4>
  <p> <%= `${book.description.substring(0, 220)} ...` %> </p>
  </article>
  <% }) %>
  </section>






<%- include('../partials/footer') %>